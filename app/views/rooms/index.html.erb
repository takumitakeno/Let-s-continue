<div class="container" style="margin-top: 10px">
  <div class="row">
    <%= render 'users/profire', user: current_user %>
    <div class="col-xs-9">
      <div class="row">
        <div class="col-xs-6 col-xs-offset-6">
          <div class="form-group form-inline">
            <%= search_form_for @q, url: rooms_path do |f| %>
              <%= f.label :コミュニティ検索 %>
              <%= f.search_field :name_cont, class: "form-control", placeholder: "キーワードを入力" %>
              <%= f.submit "検索する", class: "btn btn-default" %>
            <% end %>
          </div>
        </div>
      </div>
      <% @rooms.each do |room| %>
        <div class="panel">
          <div class="panel-body">
            <div class="row">
              <div class="col-xs-11 col-xs-offset-1">
                <%= link_to room.name, room_path(room) %>
              </div>
            </div>
            <div class="row">
              <div class="col-xs-2 col-xs-offset-1">
                <p><%= room.chats.count %>:コメント</p>
              </div>
              <div class="col-xs-2 col-xs-offset-7">
                <p><%= time_ago_in_words(room.created_at) %></p>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>