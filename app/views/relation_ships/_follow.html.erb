<% if current_user != user %>
  <% if user.followed_by?(current_user) %>
    <%=link_to "フォロー済み", relation_ship_path(user, params: {followed_id: user.id}), class: "btn btn-primary",method: :delete, remote: true %>
  <% else %>
    <%=link_to "フォローする", relation_ships_path(user, params: {followed_id: user.id}), class: "btn btn-default",method: :post, remote: true %>
  <% end %>
<% end %>