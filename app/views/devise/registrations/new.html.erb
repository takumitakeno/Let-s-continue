<div class="container sign_up-top">
  <div class="row">
    <div class="col-xs-4">
      <div class="panel panel-default">
        <div class="panel-body">
          <h4>Let's continueへようこそ！</h4>
          <p>あなたも一緒にトレーニングをはじめよう！</p>
        </div>
      </div>
    </div>
    <div class="col-xs-8">
      <div class="panel panel-default">
        <div class="panel-body">
          <h2>会員登録</h2>

          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            

            <div class="field">
              <%= f.label :名前 %><br />
              <%= f.text_field :user_name, autofocus: true, autocomplete: "user_name", class: "form-control" %>
            </div>

            <div class="field">
              <%= f.label :メール %><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
            </div>

            <div class="field">
              <%= f.label :パスワード %>
              <% if @minimum_password_length %>
              <strong>(<%= @minimum_password_length %> 文字以上で入力してください)</strong>
              <% end %><br />
              <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
            </div>

            <div class="field">
              <%= f.label :パスワード（確認用） %><br />
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
            </div><br>

            <div class="actions">
              <%= f.submit "Sign up", class: "btn btn-primary btn-block" %>
            </div><br>
          <% end %>

          <%= render "devise/shared/links" %>

        </div>
      </div>
    </div>
  </div>
</div>
<%= render "devise/shared/error_messages", resource: resource %>