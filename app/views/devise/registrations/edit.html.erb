<div class="container devise_top">
  <div class="row">
    <div class="col-xs-8 col-xs-offset-2">
      <div class="row">
        <div class="col-xs-12">
          
          <div class="panel panel-default">
            <div class="panel-body">
              <h3>退会</h3>
                <p>退会する場合はボタンを押してください。 <%= button_to "退会する", registration_path(resource_name), 
                data: { confirm: "本当に退会してもよろしいですか？" }, method: :delete,
                class: "btn btn-danger btn-block" %></p>
              <%= link_to "戻る", :back %>
            </div>
          </div>
          
        </div>
      </div>
    </div>
  </div>
</div>
<%= render "devise/shared/error_messages", resource: resource %>