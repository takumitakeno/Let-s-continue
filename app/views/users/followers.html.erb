<div class="container" style="margin-top: 10px">
  <div class="row">
    <%= render 'users/profire', user: current_user %>
    <div class=col-xs-9>
      <div class="row">
        <div class="col-xs-12">
          <p><strong><%= @user.user_name %>さんのフォロワー 一覧</p></strong>
        </div>
        <div class="col-xs-12">
          <div class="list-all jscroll">
            <% @users.each do |user| %>
              <div class="panel panel-info">
                <div class="panel-body">
                  <div class="row">
                    <div class="col-xs-2">
                      <%= attachment_image_tag user, :profile_image, format: "jpeg", size:"50x50", fallback: "no_image.jpg",  class: "img-circle" %>
                    </div>
                    <div class="col-xs-3">
                      <%= link_to user.user_name, user_path(user) %>
                    </div>
                    <div class="col-xs-2">
                      <%= link_to "フォロー数：", follows_user_path(user) %><%= user.followings.count %>
                    </div>
                    <div class="col-xs-3">
                      <%=  link_to "フォロワー数：", followers_user_path(user) %><%= user.followers.count %>
                    </div>
                    <div class="col-xs-2">
                      <%= link_to '詳細', user_path(user), class: "btn btn-success" %>
                    </div>
                  </div>
                </div>
              </div>
            <% end %>
            <%= paginate @users %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>