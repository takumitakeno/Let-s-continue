<div class="container">
  <div class="row">
  	<div class="col-xs-4 col-xs-offset-8">
	  <%= search_form_for @q do |f| %>
	    <%= f.label :ユーザー検索 %>
	    <%= f.search_field :user_name_cont %>
	    <%= f.submit "検索する", class: "glyphicon glyphicon-search" %>
      <% end %>
    </div>
    <%= render 'users/profire', user: current_user %>
    <div class="col-xs-8">
      <% @users.each do |user| %>
        <div class="panel panel-info">
          <div class="panel-body">
          	<div class="panel-body">
              <%= attachment_image_tag user, :profile_image, format: "jpeg", size:"50x50", class: "img-circle" %>
              <%= link_to user.user_name, user_path(user) %>
              <% if current_user != user %>
                <% if user.followed_by?(current_user) %>
                  <p><%=link_to "フォロー済み", relation_ship_path(user, params: {followed_id: user.id}), class: "btn btn-primary",method: :delete %></p>
                <% else %>
                    <p><%=link_to "フォロー", relation_ships_path(user, params: {followed_id: user.id}), class: "btn btn-default",method: :post %></p>
                <% end %>
              <% end %>
            </div>
            <div class="panel-body">
            <p><strong>自己紹介: </strong><%= user.introduction %></p>
           </div>
          </div>
        </div>
      <% end %>
	</div>
  </div>
</div>