<div class="container">
  <div class="row">
    <%= render 'users/profire', user: current_user %>
    <div class="col-xs-9">
      <div class="panel panel-info">
  	  	<div class="panel-body">
          <div class="row">
            <div class="col-xs-2">
              <%= attachment_image_tag @user, :profile_image, format: "jpeg", size:"50x50", fallback: "no_image.jpg",  class: "img-circle" %>
            </div>
            <div class="col-xs-3">
  	  	      <%= @user.user_name %>
            </div>
            <div class="col-xs-2">
              <%= link_to "フォロー数：", follows_user_path(@user) %><%= @user.followings.count%>
            </div>
            <div class="col-xs-3">
              <%=  link_to "フォロワー数：", followers_user_path(@user) %><%= @user.followers.count %>
            </div>

            <% if @user == current_user %>
              <div class="col-xs-2">
                <%= link_to "退会する", user_registration_path, method: :delete, data: {confirm: "本当に退会してもよろしいですか？"}, class: "btn-sm btn-danger" %>
              </div>
            <% else %>
              <div class="col-xs-2">
                <div id="follow_<%= @user.id %>">
                  <%= render 'relation_ships/follow', user: @user %>
                </div>
              </div>
            <% end %>

          </div>
  	  	</div>
        <div class="panel-body">
          <div class="row">
            <div class="col-xs-2">
              <h4><strong>自己紹介</strong></h4>
            </div>
            <div class="col-xs-10">
              <%= simple_format(@user.introduction) %>
            </div>
          </div>
        </div>
      </div>

      <% @posts.each do |post| %>
  	  	<div class="panel panel-info">
          <div class="panel-body">
            <div class="row">
              <div class="col-xs-2">
                <%= attachment_image_tag post.user, :profile_image, format: "jpg", size:"50x50", fallback: "no_image.jpg",  class: "img-circle"%>
              </div>
              <div class="col-xs-5">
                <%= post.user.user_name %>
              </div>
              <div class="col-xs-3">
                <p><%= time_ago_in_words(post.created_at) %>前に投稿</p>
              </div>
            </div>
          </div>
          <%= link_to post_path(post) do %>
            <div class="panel-body">
              <div class="row">
                <div class="col-xs-2">
                  <h4><strong>投稿</strong></h4>
                </div>
                <div class="col-xs-10">
                  <%= simple_format(post.post) %>
                </div>
              </div>
            </div>
          <% end %>
          <div class="panel-body">
            <div class="row">
              <div class="col-xs-4 col-xs-offset-4">
                <%= attachment_image_tag post, :training_image, format: 'jpeg', size: "200x200", class: "img-rounded" %>
              </div>
            </div>
          </div>
          <div class="panel-body">
            <div class="row">
              <div class="col-xs-3">
                <div id="good_<%= post.id %>">
                  <%= render 'goods/good', post: post %>
                </div>
                <h5><%= post.post_messages.count %> 件のコメント</h5>
              </div>
              <div class="col-xs-12">
                <%= render "posts/tags", post: post %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
