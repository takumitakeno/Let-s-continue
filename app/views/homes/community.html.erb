<div class="container">
  <div class="row">
    <%= render 'users/profire', user: current_user %>
    <div class="col-xs-9">

      <% if user_signed_in? %>
        <h2>トークルーム作成</h2>
        <%= form_with model: @room do |f| %>
          <%= f.label :name %>
          <%= f.text_field :name %>
          <%= f.submit %>
        <% end %>

        <h2>参加済トークルーム一覧</h2>
        <% @rooms.each do |room| %>
          <%= link_to room.name, room_path(room) %>
        <% end %>

        <h2>未参加トークルーム一覧</h2>
        <% @nonrooms.each do |room| %>
          <%= room.name %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>