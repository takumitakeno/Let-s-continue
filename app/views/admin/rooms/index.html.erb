<div class="container">
  <div class="row">
    <div class="col-xs-2">
      <p>ここは管理人専用です</p>
    </div>
  </div>
  <div class="row">
    <%= render 'admin/homes/admin_menu', user: current_user %>
    <div class="col-xs-9">
      <div class="row">
        <div class="col-xs-12">
          <h3>コミュニティ一覧</h3>
  	      <% @rooms.each do |room| %>
		        <div class="panel">
		          <div class="panel-body">
		      	    <div class="row">
		      	      <div class="col-xs-1">
		      	  	    <%= room.id %>
		      	      </div>
		      	      <div class="col-xs-6">
		                <%= room.name %>
		              </div>
		              <div class="col-xs-2 col-xs-offset-3">
		          	    <%= link_to "削除する", admin_room_path(room), method: :delete, data: {confirm: "本当に削除してもよろしいですか？"}, class: "btn btn-danger" %>
		              </div>
		            </div>
		            <div class="row">
		              <div class="col-xs-2 col-xs-offset-1">
		                <p><%= room.chats.count %>:コメント</p>
		              </div>
		              <div class="col-xs-2 col-xs-offset-7">
		          	    <p><%= time_ago_in_words(room.created_at) %></p>
		              </div>
		            </div>
		          </div>
		        </div>
		      <% end %>
		    </div>
      </div>
    </div>
  </div>
</div>