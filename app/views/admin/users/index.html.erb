<div class="container">
  <div class="row">
    <div class="col-xs-2">
      <p>ここは管理人専用です</p>
    </div>
    <div class="col-xs-4 col-xs-offset-6">
  	  <%= search_form_for @q, url: admin_users_path do |f| %>
  	    <%= f.label :ユーザー検索 %>
  	    <%= f.search_field :user_name_cont %>
  	    <%= f.submit "検索する", class: "glyphicon glyphicon-search" %>
      <% end %>
    </div>
  </div>
  <div class="row">
  	<%= render 'admin/homes/admin_menu' %>
    <div class="col-xs-9">
      <% @admin_users.each do |user| %>
        <div class="panel panel-warning">
          <div class="panel-body">
          	<div class="row">
              <div class="col-xs-2">
                <%= attachment_image_tag user, :profile_image, format: "jpeg", size:"50x50", fallback: "no_image.jpg", class: "img-circle" %>
              </div>
              <div class="col-xs-7">
                <%= user.user_name %>
              </div>
              <div class="col-xs-2">
                <%= link_to "ユーザー詳細へ", admin_user_path(user), class: "btn btn-warning" %>
              </div>
            </div>
          </div>
          <div class="panel-body">
            <div class="row">
              <div class="col-xs-2">
                <p><strong>自己紹介</strong></p>
              </div>
              <div class="col-xs-9">
                <%= simple_format(user.introduction) %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
  	</div>
  </div>
</div>