<div class="container">
  <div class="row">
    <div class="col-xs-2">
      <p>ここは管理人専用です</p>
    </div>
  </div>
  <div class="row">
  	<%= render 'admin/homes/admin_menu', user: current_user %>
  	<div class="col-xs-9">
      <% @posts.each do |post| %>
        <div class="panel panel-warning">
          <div class="panel-body">
          	<div class="row">
              <div class="col-xs-2">
                <%= attachment_image_tag post.user, :profile_image, format: "jpeg", size:"50x50", fallback: "no_image.jpg", class: "img-circle" %>
              </div>
              <div class="col-xs-4">
                <%= post.user.user_name %>
              </div>
              <div class="col-xs-3">
                <p><%= time_ago_in_words(post.created_at) %>に投稿</p>
              </div>
              <div class="col-xs-2 col-xs-offset-1">
                <%= link_to "投稿詳細へ", admin_post_path(post), class: "btn btn-warning" %>
              </div>
            </div>
          </div>
          <div class="panel-body">
            <div class="row">
              <div class="col-xs-2">
                <p><strong>投稿内容</strong></p>
              </div>
              <div class="col-xs-9">
                <%= simple_format(post.post) %>
              </div>
            </div>
          </div>
          <div class="panel-body">
            <div class="row">
              <div class="col-xs-4 col-xs-offset-4">
                <%= attachment_image_tag post, :training_image, format: 'jpeg', size: "200x200", class: "img-rounded" %>
              </div>
            </div>
          </div>
          <div class="panel-body">
            <div class="row">
              <div class="col-xs-3">
                <h5><%= post.post_messages.count %> 件のコメント</h5>
              </div>
              <div class="col-xs-12">
                <%= render "admin/posts/tags", post: post %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
	  </div>
  </div>
</div>