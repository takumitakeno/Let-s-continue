<div class="container">
  <div class="row">
    <% if user_signed_in? %>
      <%= render 'users/profire', user: current_user %>
      <div class="col-xs-8">
      	<% @posts.each do |post| %>
          <%= link_to post_path(post) do %>
        	  <div class="panel panel-info">
        	  	<div class="panel-body">
                <%= attachment_image_tag post.user, :profile_image, format: "jpeg", size:"50x50", class: "img-circle", fallback: "no_image.jpg" %>
        	  	  <%= post.user.user_name %>
                <% if current_user != post.user %>
                  <% if post.user.followed_by?(current_user) %>
                    <%=link_to "フォロー済み", relation_ship_path(post, params: {followed_id: post.user.id}), class: "btn btn-primary",method: :delete %>
                  <% else %>
                      <%=link_to "フォロー", relation_ships_path(post, params: {followed_id: post.user.id}), class: "btn btn-default",method: :post %>
                  <% end %>
                <% end %>
        	  	</div>
              <div class="panel-body">
                <%= simple_format(post.post) %>
              </div>
              <div class="panel-body">
                <%= attachment_image_tag post, :training_image, format: 'jpeg', size: "200x100", class: "img-rounded" %>
              </div>
              <div class="panel-body">
                <div id="good_<%= post.id %>">
                  <%= render 'goods/good', post: post %>
                </div>
                <h5><%= post.post_messages.count %> 件のコメント</h5>
                <%= render 'posts/tags', post: post %>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
    <% else %>
      <div class="col-xs-12">
        <% @posts.each do |post| %>
          <%= link_to post_path(post) do %>
            <div class="panel panel-info">
              <div class="panel-body">
                <%= attachment_image_tag post.user, :profile_image, format: "jpeg", size:"50x50", class: "img-circle" %>
                <%= post.user.user_name %>
              </div>
              <div class="panel-body">
                <%= simple_format(post.post) %>
              </div>
              <div class="panel-body">
                <%= attachment_image_tag post, :training_image, format: 'jpeg', size: "200x100" %>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>