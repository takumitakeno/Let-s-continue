<div class="container">
  <div class="row">
	<%= render 'users/profire', user: current_user %>
	<div class="col-xs-8">
	  <div class="panel panel-default">
	    <div class="panel-body">
		  <%= attachment_image_tag @post.user, :profile_image, format: 'jpeg', size: "100x100", class: "img-circle" %>
		  <%= @post.user.user_name %>
	    </div>
	    <div class="panel-body">
	      <%= form_for (@post) do |f| %>
	      <%= render 'layouts/error_messages', model: f.object %>
	      <h4>トレーニング画像</h4>
	        <%= f.attachment_field :training_image %><br>
	        <%= f.text_area :post, class: "form-control", size: "10x10", placeholder: "255文字以内" %><br>
	        <%= f.text_field :tag_list, value: @post.tag_list.join(','), class: "form-control", placeholder: "タグを複数つける場合は、半角,で区切ってください。" %><br>
	        <%= f.submit "編集する", class: "btn btn-info btn-block" %>
	      <% end %>
	    </div>
	  </div>
	</div>
  </div>
</div>