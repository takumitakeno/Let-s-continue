<div class="container">
  <div class="row">
    <%= render 'users/profire', user: current_user %>
  	<div class="col-xs-8">
  	  <div class="panel panel-default">
        <div class="panel-body">
          <div class="row">
            <div class="col-xs-2">
              <%= attachment_image_tag @user, :profile_image, format: 'jpeg', size: "50x50", fallback: "no_image.jpg",  class: "img-circle" %>
            </div>
            <div class="col-xs-3">
              <%= @user.user_name %>
            </div>
          </div>
        </div>
        <div class="panel-body">
          <%= form_for (@post) do |f| %>
            <h4>トレーニング画像</h4>
            <%= f.attachment_field :training_image %><br>
            <h4>トレーニング内容</h4>
            <%= f.text_area :post, class: "form-control", size: "5x5" %><br>
            <h4>タグ</h4>
            <%= f.text_field :tag_list, value: @post.tag_list.join(','), class: "form-control" %><br>
            <%= f.submit "投稿する", class: "btn btn-default" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>