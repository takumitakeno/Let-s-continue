<div class="container">
  <div class="row">
  	<div claas="col-xs-12">
  	  <div class="panel panel-default">
        <div class="panel-body">
          <%= attachment_image_tag @user, :profile_image, format: 'jpeg', size: "100x100", class: "img-circle" %>
          <%= @user.user_name %>
        </div>
        <div class="panel-body">
          <%= form_for (@post) do |f| %>
            <h4>トレーニング画像</h4>
            <%= f.attachment_field :training_image %>
            <%= f.text_area :post, class: "form-control", size: "10x10" %><br>
            <%= f.submit "投稿する", class: "btn btn-default" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>